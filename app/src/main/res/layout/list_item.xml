<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin"
    android:minHeight="@dimen/item_dimension">

    <ImageView
        android:id="@+id/store_picture"
        android:layout_width="@dimen/item_dimension"
        android:layout_height="@dimen/item_dimension"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_dimension"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_toRightOf="@id/store_picture"
        android:orientation="vertical">

        <TextView
            android:id="@+id/store_name"
            style="@style/StoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="44dp"
            android:text="Store Name" />

        <TextView
            android:id="@+id/store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="22dp"
            android:text="Address" />

        <TextView
            android:id="@+id/store_opening_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="22dp"
            android:text="Opening Hours" />
    </LinearLayout>
</LinearLayout>